<html>
<head>
<style>
.myRegister {
  text-align: center;
  background-color: tomato;
  color: white;
  padding: 10px;
}
</style>

<h1 class = "myRegister">Register</h1>
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th><br>
      <th>Surname</th><br>
      <th>Email</th><br>
      <th>Address</th><br>
      <th>Telephone</th><br>
      <th colspan="3"></th><br>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td><br>
        <td><%= user.surname %></td><br>
        <td><%= user.email %></td><br>
        <td><%= user.address %></td><br>
        <td><%= user.telephone %></td><br>
        <td><%= link_to 'Show', user %></td><br>
        <td><%= link_to 'Edit', edit_user_path(user) %></td><br>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
